<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>App with DB</title>
  </head>
  <body>
    <h1>Add some name and quote.</h1>
    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
    <h2> Quotes </h2>
    <ul class="quotes">
    <!-- Loop through quotes -->
    <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
        <!-- Output name from the iterated quote object -->
        <span><%= quotes[i].name %></span>:
        <!-- Output quote from the iterated quote object -->
        <span><%= quotes[i].quote %></span>
        </li>
    <% } %>
    </ul>
    <div>
        <h2>Replace Data</h2>
        <p>
          Replace the name you specify with a quote
        </p>
        <input type="text" placeholder="name" name="replace_name" id="replace_name"/>
        <input type="text" placeholder="quote" name="replace_quote" id="replace_quote" />
        <button id="update-button">Replace</button>
    </div>
    <div>
        <h2>Delete data</h2>
        <p>
          Delete one name, data pair
        </p>
        <input type="text" placeholder="name" name="del_name" id="del_name"/>
        <button id="delete-button">Delete data</button>
    </div>
    <div id="message"></div>
    <script src="/main.js"></script>
  </body>
</html>